---
to: <%- drd || 'packages' %>/<%- projectName %>/package.json
---
{
  "name": "<%- name %>",
  "description": "<%- description %>",
  "version": "0.1.0",
  "keywords": [
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10.16"
  },
  "author": "<%- author %> ",
  "license": "<%- license %> ",
  "scripts": {
    "acceptance": "al-mocha \"dist/__tests__/acceptance/**/*.js\"",
    "build": "al-tsc",
    "clean": "al-clean <%-archiveName%>*.tgz dist *.tsbuildinfo package",
    "pretest": "npm run build",
    "test": "al-mocha \"dist/__tests__/**/*.js\"",
    "unit": "al-mocha \"dist/__tests__/unit/**/*.js\"",
    "verify": "npm pack && tar xf <%-archiveName%>*.tgz && tree package && npm run clean"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@artlab/build": "^6.2.3",
    "@artlab/eslint-config": "^8.1.3",
    "@artlab/testlab": "^3.3.3",
    "@types/node": "^14.0.20"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ]
}
