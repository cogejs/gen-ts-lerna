---
to: <%- targetDir || 'packages' %>/<%- projectName %>/package.json
---
{
  "name": "<%- name %>",
  "description": "<%- description %>",
  "version": "0.1.0",
  "keywords": [
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "author": "<%- author %>",
  "license": "<%- license %>",
  "scripts": {
    "acceptance": "nb-mocha \"dist/__tests__/acceptance/**/*.js\"",
    "build": "nb-tsc",
    "clean": "nb-clean <%-archiveName%>*.tgz dist *.tsbuildinfo package",
    "pretest": "npm run clean && npm run build",
    "test": "npm run jest",
    "jest": "jest",
    "verify": "npm pack && tar xf <%-archiveName%>*.tgz && tree package && npm run clean"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@nutol/build": "^0.2.0",
    "@nutol/eslint-config": "^0.2.0",
    "@types/node": "^16.4.1"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ]
}
