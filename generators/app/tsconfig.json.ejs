---
to: tsconfig.json
---
{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "sourceMap": true,
    "declaration": true
  },
  "include": ["index.ts", "src"],
  "exclude": ["node_modules", "src/__tests__"]
}
