---
to: <%- targetDir || 'packages' %>/<%- projectName %>/tsconfig.json
---
{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@nutol/build/config/tsconfig.common.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "outDir": "dist",
    "rootDir": "src",
    "incremental": false
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "**/*.ts",
  ]
}
