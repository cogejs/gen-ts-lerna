---
to: <%- targetDir || 'packages' %>/<%- projectName %>/package.json
---
<% const pmRun = locals.yarn ? 'yarn run' : 'npm run'%>
{
  "name": "<%- name %>",
  "description": "<%- description %>",
  "version": "0.1.0",
  "keywords": [
  ],
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.cjs"
    }
  },
  "engines": {
    "node": ">=16"
  },
  "author": "<%- author %>",
  "license": "<%- license %>",
  "publishConfig": {
  <% if (flat) { %>
    "directory": "dist",
  <% } %>
    "access": "public"
  },
  "scripts": {
  <% if (flat) { %>
    "version": "yarn run copy:assets",
    "copy:assets": "cpy 'package.json' 'LICENSE' 'README.md' 'CHANGELOG.md' dist",
    "build": "tsup && yarn run copy:assets",
  <% } else { %>
    "build": "tsup",
  <% } %>
    "clean": "del '<%-archiveName%>*.tgz' 'dist/*' '*.tsbuildinfo' 'package'",
    "pretest": "<%-pmRun%> clean && <%-pmRun%> build",
    "test": "<%-pmRun%> pretest && <%-pmRun%> jest",
    "jest": "jest"
  },
  "dependencies": {},
  "devDependencies": {
    "@nutol/eslint-config": "^0.2.7",
    "@swc/core": "^1.3.35",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "jest": "^29.4.2",
    "del-cli": "^5.0.0",
    "tsup": "^6.6.2",
    "tsx": "^3.12.3"<% if (flat) { %>,
    "cpy-cli": "^3.1.1"<% } %>
  },
<% if (flat) { %>
  "files": [
    "**/*",
    "!__tests__"
  ]
<% } else { %>
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ]
<% } %>
}
