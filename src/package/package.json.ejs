---
to: <%- targetDir || 'packages' %>/<%- projectName %>/package.json
---
<% const pmRun = yarn ? 'yarn run' : 'npm run'%>
{
  "name": "<%- name %>",
  "description": "<%- description %>",
  "version": "0.1.0",
  "keywords": [
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "author": "<%- author %>",
  "license": "<%- license %>",
  "publishConfig": {
  <% if (flat) { %>
    "directory": "dist",
  <% } %>
    "access": "public"
  },
  "scripts": {
  <% if (flat) { %>
    "version": "yarn run copy:assets",
    "copy:assets": "cpy 'package.json' 'LICENSE' 'README.md' 'CHANGELOG.md' dist",
    "build": "nb-tsc && yarn run copy:assets",
  <% } else { %>
    "build": "nb-tsc",
  <% } %>
    "clean": "nb-clean '<%-archiveName%>*.tgz' 'dist/*' '*.tsbuildinfo' 'package'",
    "pretest": "<%-pmRun%> clean && <%-pmRun%> build",
    "test": "<%-pmRun%> pretest && <%-pmRun%> jest",
    "jest": "jest"
  },
  "dependencies": {},
  "devDependencies": {
    "@nutol/build": "^0.2.6",
    "@nutol/eslint-config": "^0.2.2",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35"<% if (flat) { %>,
    "cpy-cli": "^3.1.1"<% } %>
  },
<% if (flat) { %>
  "files": [
    "**/*",
    "!__tests__"
  ]
<% } else { %>
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ]
<% } %>
}
