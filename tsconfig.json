{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "strictNullChecks": true,

    "outDir": "generators",
    "lib": ["es2018"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2015",
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/__tests__"]
}
