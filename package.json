{
  "name": "gen-ts-lerna",
  "version": "0.9.8",
  "description": "A coge generator for building scaffold monorepos with Lerna and TypeScript tooling.",
  "author": "towyuan@outlook.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cogejs/gen-ts-lerna.git"
  },
  "keywords": [
    "coge-generator",
    "code",
    "generator",
    "typescript",
    "ts",
    "lerna",
    "package",
    "template"
  ],
  "scripts": {
    "prerelease": "npm run clean && npm run build:full && cross-env CI=1 npm run test:ci",
    "release": "np --no-2fa",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "eslint": "nb-eslint --report-unused-disable-directives --cache .",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier:cli": "nb-prettier \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "prettier:check": "npm run prettier:cli -- --check",
    "prettier:fix": "npm run prettier:cli -- --write",
    "clean": "nb-clean generators/** coverage .nyc_output *.tsbuildinfo",
    "copyres": "cpy --cwd src --dot --parents '**/*' '!**/*.ts' ../generators",
    "build": "nb-tsc -b && npm run copyres && npm run prettier:fix",
    "build:full": "npm ci --ignore-scripts && npm run clean && npm run build",
    "pretest": "npm run clean && npm run build",
    "test": "npm run jest",
    "test:ci": "npm run jest",
    "jest": "jest",
    "posttest": "npm run lint"
  },
  "files": [
    "README.md",
    "generators",
    "!*/__tests__"
  ],
  "dependencies": {
    "@coge/generator": "^0.6.3",
    "execa": "^6.0.0",
    "fs-extra": "^10.0.0",
    "git-remote-origin-url": "^4.0.0",
    "micromatch": "^4.0.4",
    "parse-packagejson-name": "^1.0.1"
  },
  "devDependencies": {
    "@nutol/build": "^0.2.1",
    "@nutol/eslint-config": "^0.2.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.0",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "cpy-cli": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-plugin": "^4.1.0",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "np": "^7.6.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  }
}
