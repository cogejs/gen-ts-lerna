{
  "name": "gen-ts-lerna",
  "version": "0.11.0",
  "description": "A coge generator for building scaffold monorepos with Lerna and TypeScript tooling.",
  "author": "towyuan@outlook.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cogejs/gen-ts-lerna.git"
  },
  "keywords": [
    "coge-generator",
    "code",
    "generator",
    "typescript",
    "ts",
    "lerna",
    "package",
    "template"
  ],
  "scripts": {
    "prerelease": "yarn run clean && yarn run build:full && cross-env CI=1 yarn run test:ci",
    "release": "np --no-2fa",
    "lint": "yarn run prettier:check && yarn run eslint",
    "lint:fix": "yarn run eslint:fix && yarn run prettier:fix",
    "eslint": "nb-eslint --report-unused-disable-directives --cache .",
    "eslint:fix": "yarn run eslint --fix",
    "prettier:cli": "nb-prettier \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "prettier:check": "yarn run prettier:cli --check",
    "prettier:fix": "yarn run prettier:cli --write",
    "clean": "nb-clean 'generators/**' 'coverage' '.nyc_output' '*.tsbuildinfo'",
    "copyres": "cpy --cwd=src --dot '**/*' '!**/*.ts' ../generators",
    "build": "nb-tsc -b && yarn run copyres && yarn run prettier:fix",
    "build:full": "yarn install --ignore-scripts && yarn run clean && yarn run build",
    "pretest": "yarn run clean && yarn run build",
    "test": "yarn run jest",
    "test:ci": "yarn run jest",
    "jest": "jest",
    "posttest": "yarn run lint"
  },
  "files": [
    "README.md",
    "generators",
    "!*/__tests__"
  ],
  "dependencies": {
    "@coge/generator": "^0.6.8",
    "execa": "^6.1.0",
    "fs-extra": "^10.0.1",
    "git-remote-origin-url": "^4.0.0",
    "micromatch": "^4.0.4",
    "parse-packagejson-name": "^1.0.1",
    "tily": "^2.14.4",
    "tslib": "^2.3.1",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@nutol/build": "^0.2.6",
    "@nutol/eslint-config": "^0.2.2",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^17.0.21",
    "@types/which": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "cpy-cli": "^4.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-eslint-plugin": "^4.1.0",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "np": "^7.6.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "packageManager": "yarn@3.2.0"
}
